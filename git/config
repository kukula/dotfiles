[user]
	name = Anatoliy Kukul
	email = anatolkukula@gmail.com
[core]
	editor = vim
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/dotfiles/git/gitignore_global
[push]
	default = simple
[alias]
  co = checkout
  br = branch
  st = status
  d = diff
  dc = diff --cached
  cc = commit
  ca = commit --amend
  a = add
[color]
	ui = auto
[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[github]
	user = kukula
	token = token
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[pull]
	ff = only
